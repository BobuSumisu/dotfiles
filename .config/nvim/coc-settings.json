{
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "typescript",
        "python",
        "rust",
        "json",
        "html",
        "crystal"
    ],
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "clangd": {
            "command": "clangd",
            "args": [
                "--background-index"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        },
        "crystal": {
            "command": "scry",
            "rootPatterns": ["shard.yml", ".vim/", ".git/", ".hg/"],
            "filetypes": ["crystal"]
        }
    }
}
