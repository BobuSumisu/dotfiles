# ~/.bash_aliases
# vim: set ft=sh:

alias ls='ls --color=always'
alias ll='ls -al'
alias grep='grep --color=always'

alias \:w='echo "you are not in vim now..."'

# Some git shortcuts
alias Ga='git add'
alias Gb='git blame'
alias Gc='git clone'
alias Gd='git diff'
alias Ge='git merge'
alias Gf='git fetch'
alias Gg='git grep'
alias Gh='git show'
alias Gi='git init'
alias Gl='git log'
alias Gm='git commit'
alias Gn='git branch'
alias Go='git checkout'
alias Gp='git push'
alias Gr='git rm'
alias Gs='git status'
alias Gt='git reset'
alias Gu='git pull'
alias Gv='git mv'
